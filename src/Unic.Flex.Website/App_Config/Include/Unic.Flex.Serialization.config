<configuration>
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Application Configuration">
          <serializationProvider type="Unicorn.Serialization.Sitecore.Fiat.FiatSitecoreSerializationProvider, Unicorn" rootPath="$(repositoryRoot)\serialization\app" singleInstance="true" />
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">

            <!-- Serialization config with includes/excludes comes here -->

            <include database="master" path="/sitecore/layout/Renderings/Flex" />
            <include database="master" path="/sitecore/system/Modules/Flex" />
            <include database="master" path="/sitecore/system/Settings/Rules/Definitions/Elements/Flex" />
            <include database="master" path="/sitecore/system/Settings/Validation Rules/Field Rules/Flex" />
            <include database="master" path="/sitecore/templates/Branches/Flex" />
            <include database="master" path="/sitecore/templates/Flex" />

            <include database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Contextual Ribbons/Flex" />

            <!-- SPEAK -->
            <include database="core" path="/sitecore/client/Your Apps/Flex" />
            <include database="core" path="/sitecore/client/Applications/Launchpad/PageSettings/Buttons/Tools/Flex" />
            
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>