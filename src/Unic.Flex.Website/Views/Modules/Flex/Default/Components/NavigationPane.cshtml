@using Unic.Flex.Core.Globalization
@model Unic.Flex.Model.ViewModel.Components.NavigationPaneViewModel

<div class="flex_mod_multistepnavigation" data-flexform="multistepnavigation">
    <ul>
        @{
            var stepNumber = 1;
        }

        @foreach (var step in Model.Items)
        {
            if (step.IsActive)
            {
                <li class="flex_var_active" data-flexform="multistepnavigationitem">
                    <span class="flex_multistepitem">
                        <span aria-hidden="true" class="flex_step_number">@stepNumber</span>
                        <span class="flex_step_title">@step.Title</span>
                        <span class="visuallyhidden">@TranslationHelper.FlexText("Your are on step") @step.Title</span>
                    </span>
                </li>
            }
            else if (step.IsLinked)
            {
                <li class="flex_var_done" data-flexform="multistepnavigationitem">
                    <a href="@step.Url" class="flex_multistepitem">
                        <span aria-hidden="true" class="flex_step_number">@stepNumber</span>
                        <span class="flex_step_title">@step.Title</span>
                        <span class="visuallyhidden">@TranslationHelper.FlexText("Go to step") @step.Title</span>
                    </a>
                </li>
            }
            else
            {
                <li class="flex_var_inactive" data-flexform="multistepnavigationitem">
                    <span class="flex_multistepitem">
                        <span aria-hidden="true" class="flex_step_number">@stepNumber</span>
                        <span class="flex_step_title">@step.Title</span>
                    </span>
                </li>
            }

            stepNumber++;
        }
    </ul>
</div>