@using System.Web.Mvc.Html
@inherits Unic.Flex.Presentation.FlexView<Unic.Flex.Model.ViewModel.Fields.FieldViewModel, Unic.Flex.Model.DomainModel.Fields.InputFields.MultilineTextField>

<li>
    @{
        Model.Attributes.Add("Rows", DomainModel.Rows);
    }
    
    @Html.LabelFor(m => m.Value, Model.Label)
    @Html.TextAreaFor(m => m.Value, Model.Attributes)
    @Html.ValidationMessageFor(model => model.Value)
</li>