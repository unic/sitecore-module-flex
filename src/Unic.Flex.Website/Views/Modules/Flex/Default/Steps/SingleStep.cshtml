@using Sitecore.Globalization
@using Unic.Flex.Presentation
@model Unic.Flex.Model.ViewModel.Steps.SingleStepViewModel

@for (int i = 0; i < Model.Sections.Count; i++)
{
    @Html.FlexComponent(m => m.Sections[i])
}

<input type="submit" value="@Translate.Text("Finish Form")" />

@if (!string.IsNullOrWhiteSpace(Model.CancelUrl))
{
    <a href="@Model.CancelUrl">@Model.CancelText</a>
}