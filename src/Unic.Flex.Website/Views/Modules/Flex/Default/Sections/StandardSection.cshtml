@using Unic.Flex.Presentation
@inherits Unic.Flex.Presentation.FlexView<Unic.Flex.Model.Sections.SectionViewModel, Unic.Flex.Model.Sections.StandardSection>

@if (Model.DisableFieldset)
{
    <ul>
        <li>Fields without fieldset</li>
    </ul>
}
else
{
    <fieldset>
        <legend>@Model.Title</legend>
        
        <ul>
            @for(int i=0; i<Model.Fields.Count; i++)
            {
                @Html.FlexComponent(Model.Fields[i], ViewData.TemplateInfo.HtmlFieldPrefix + ".Fields[" + i + "]")
            }
        </ul>

    </fieldset> 
}