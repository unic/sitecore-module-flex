@using System.Linq
@using Sitecore.Configuration
@using Sitecore.Globalization
@using Unic.Flex.Presentation
@model Unic.Flex.Model.DomainModel.Sections.StandardSection

@Model.Title
@{
    var fieldTitle = Translate.TextByDomain(Settings.GetSetting("Flex.DictionaryDomain"), "Field Title");
    var valueTitle = Translate.TextByDomain(Settings.GetSetting("Flex.DictionaryDomain"), "Value Title");
}
@fieldTitle:  @valueTitle
---------------------------------------
@foreach (var field in Model.Fields.Where(field => field.ShowInSummary))
{
    @Html.FlexComponent(m => field, "Mailers/SavePlug/Field.text")
}