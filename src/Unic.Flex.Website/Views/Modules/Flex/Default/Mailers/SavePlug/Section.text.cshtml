@using System.Linq
@using Unic.Flex.Core.Globalization
@using Unic.Flex.Core.Presentation
@model Unic.Flex.Model.Sections.StandardSection

@Model.Title
@{
    var fieldTitle = TranslationHelper.FlexText("Field Title");
    var valueTitle = TranslationHelper.FlexText("Value Title");
}
@fieldTitle:  @valueTitle
---------------------------------------
@foreach (var field in Model.Fields.Where(field => field.ShowInSummary).Where(field => !field.IsHidden))
{
    @Html.FlexComponent(m => field, "Mailers/SavePlug/Field.text", (string)ViewBag.Theme)
}